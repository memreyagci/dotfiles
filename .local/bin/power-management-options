#!/bin/sh

chosen=$(echo -e "cancel\nsuspend\nhibernate\nhybrid-sleep\nreboot\npoweroff" | dmenu -i -p "What do you want to do?")

case $chosen in
    "cancel")
        exit
        ;;

    "suspend")
        systemctl suspend && slock -m "Locked at $(date +'%I:%M %p')" 
        ;;

    "hibernate")
        systemctl hibernate && slock -m "Locked at $(date +'%I:%M %p')"  
        ;;

    "hybrid-sleep")
        systemctl hybrid-sleep && slock -m "Locked at $(date +'%I:%M %p')" 
        ;;

    "reboot")
        systemctl reboot
        ;;

    "poweroff")
        systemctl poweroff
        ;;
esac
