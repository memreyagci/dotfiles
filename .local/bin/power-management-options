#!/bin/sh

chosen=$(echo -e "cancel\nsuspend\nhibernate\nhybrid-sleep\nreboot\npoweroff" | dmenu -i -p "What do you want to do?")

case $chosen in
    "cancel")
        exit
        ;;

    "suspend")
        slock -m "Locked at $(date +'%I:%M %p')" && systemctl suspend
        ;;

    "hibernate")
        slock -m "Locked at $(date +'%I:%M %p')" && systemctl hibernate
        ;;

    "hybrid-sleep")
        slock -m "Locked at $(date +'%I:%M %p')" & systemctl hybrid-sleep
        ;;

    "reboot")
        systemctl reboot
        ;;

    "poweroff")
        systemctl poweroff
        ;;
esac
